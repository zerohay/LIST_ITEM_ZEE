        <button type="button" onclick="displayResult(); generateScript();">Generate Script</button>
        
        <label for=""></label>
        <button type="button" onclick="copyScriptToClipboard()">Copy Hasil Generator</button>

        <script>

            document.addEventListener('keydown', function (event) {
                if (event.keyCode === 13) {
                    generateScript();
                    copyScriptToClipboard()
                }
            });

        </script>

